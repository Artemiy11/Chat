<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./styles/main.min.css">
    <title>Чат</title>
</head>

<body>
    <div class="main">
        <div class="main__left">
            <a href="" class="main__profile">Профиль ></a>
            <div class="main__input">
                <input type="text">
                <div class="main__input-placeholder">
                    <img src="./images/search.svg" alt="search" class="main__input-img">
                    <span>Поиск</span>
                </div>
            </div>
            <hr class="main__divider">
            <div class="main__chats">
                {{#each chat}}
                <div class="main__chat">
                    <div class="left">
                        <div class="picture"></div>
                        <div class="content">
                            <span class="name">{{name}}</span>
                            <span class="message">{{text}}</span>
                        </div>
                    </div>
                    <div class="others">
                        <span class="time">{{time}}</span>
                        <div class="count_wrap">
                            <span class="count">{{count}}</span>
                        </div>
                    </div>
                </div>
                <hr class="main__divider">
                {{/each}}
            </div>
        </div>
        <div class="main__right">
            <div class="main__person">
                <div class="main__top-wrapper">
                    <div class="picture"></div>
                    <span>Вадим</span>
                </div>
                <div class="main__options">
                    <div></div>
                    <div></div>
                    <div></div>
                </div>
            </div>
            <hr class="main__divider">
            <div class="main__body">
                <span class="time">19 июня</span>
                {{#each messages}}
                    {{#if isYourMessage}}
                        <li>{{text}}</li>
                    {{else}}
                        <li>{{text}}</li>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    {{!--
    <script src="./index.js" type="module"></script> --}}
</body>

</html>